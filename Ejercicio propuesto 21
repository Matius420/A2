import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        float X;
        float Y;
        float Z;
        float perimetro;
        float semi;
        double area;
        Scanner ent1 = new Scanner(System.in);
        System.out.println("Ingrese la medida de la base: ");
        X = ent1.nextFloat();
        Scanner ent2 = new Scanner(System.in);
        System.out.println("Ingrese la medida de la altura: ");
        Y = ent2.nextFloat();
        Scanner ent3 = new Scanner(System.in);
        System.out.println("Ingrese la medida de la hipotenusa: ");
        Z = ent3.nextFloat();
        perimetro = X + Y + Z;
        semi = perimetro / 2;
        area = (X*Y)/2;
        System.out.println("El perimetro del trangulo equilatero es: " + perimetro);
        System.out.println("El semiperimetro del triangulo es: " + semi);
        System.out.println("El area del triangulo equilatero es: " + area);
    }
}
